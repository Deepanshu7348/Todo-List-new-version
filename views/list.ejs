<!DOCTYPE html>
<html lang="en">
<head>
    <title>Todo LIST</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="box">
        <h1>TODO LIST</h1>
    </div>
    <div class="box">
        <% dayej.forEach(function(items){ %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="checkbox1" value="<%= items._id%>" onchange="this.form.submit()">
                    <p><%= items.name%></p>
                </div>
            </form>
        <% }) %> 
        <form action="/" class="item" method="POST">
            <input type="text" name="ele1" placeholder="enter item">
            <button type="submit">+</button>
        </form>
    </div>
</body>
</html>